language: lisp
sudo: required

env:
  matrix:
    - LISP=sbcl

install:
  - curl https://raw.githubusercontent.com/sionescu/cl-travis/master/install.sh | sh
  - sbcl --version;
    git clone https://github.com/sbcl/sbcl;
    cd sbcl;
    sh install.sh;
    echo $(which sbcl);
    sbcl --version;

script:
  - cl -e '(ql:quickload :numericals)'
    [ $? -eq 1 ]

notifications:
  email: false